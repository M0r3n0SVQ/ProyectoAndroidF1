<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/f1_fondo"
    android:gravity="center">

    <!-- Campo para clima preferido -->
    <EditText
        android:id="@+id/climaPreferidoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu clima preferido"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/estilo_texto"
        android:padding="15dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:text="Selecciona tu motorista histórico favorito"
            android:textAlignment="center">
        </TextView>
    </LinearLayout>

    <!-- Campo para motorista favorito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <Spinner
            android:id="@+id/motoristaFavorito"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Botón para continuar -->
    <Button
        android:id="@+id/continuarButtonPantalla5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textSize="18sp"
        android:layout_gravity="center" />
</LinearLayout>
