<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/f1_fondo"
    android:gravity="center">


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:text="Selecciona tu circuito favorito">
        </TextView>
    </LinearLayout>

    <!-- Spinner para el circuito favorito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <Spinner
            android:id="@+id/pistaFavoritaSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- TextView para mostrar la fecha favorita -->
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorPrimary"
            android:textAlignment="center"
            android:text="Selecciona la fecha de tu carrera favorita">
        </TextView>
    </LinearLayout>

    <!-- Botón para abrir el calendario -->
    <Button
        android:id="@+id/fechaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calendario"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

    <!-- TextView para mostrar la fecha seleccionada -->
    <TextView
        android:id="@+id/fechaSeleccionadaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha seleccionada: "
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="32dp" />
    </LinearLayout>

    <!-- Botón de continuar -->
    <Button
        android:id="@+id/continuarButtonPantalla3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textSize="18sp"
        android:layout_gravity="center" />
</LinearLayout>
