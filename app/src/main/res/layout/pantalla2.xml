<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/f1_fondo"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona tu equipo favorito"
            android:textSize="16sp"
            android:textColor="?attr/colorPrimary" />
    </LinearLayout>

    <!-- Contenedor para el spinner con fondo redondeado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_redondeados"
        android:padding="10dp"
        android:layout_marginBottom="16dp">

        <!-- Spinner para seleccionar el equipo favorito -->
        <Spinner
            android:id="@+id/equipoSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>

    <!-- Campo de pais -->
    <EditText
        android:id="@+id/paisEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu país"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/estilo_texto"
        android:padding="15dp"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <!-- Botón de continuar -->
    <Button
        android:id="@+id/continuarButtonPantalla2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textSize="18sp"
        android:layout_gravity="center" />
</LinearLayout>
