<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/f1_fondo"
    android:gravity="center">

    <!-- Campo para el año de la temporada favorita -->
    <EditText
        android:id="@+id/temporadaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el año de tu temporada favorita"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/estilo_texto"
        android:padding="15dp"
        android:layout_marginBottom="16dp"
        android:inputType="number" />

    <!-- Campo para el piloto favorito -->
    <EditText
        android:id="@+id/pilotoEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce tu piloto favorito"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/estilo_texto"
        android:padding="15dp"
        android:layout_marginBottom="32dp"
        android:inputType="textPersonName" />

    <!-- Botón para continuar -->
    <Button
        android:id="@+id/continuarButtonPantalla4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:textSize="18sp"
        android:layout_gravity="center" />
</LinearLayout>
